# Example environment variables for Cloudcal (do NOT commit secrets). Copy this to `.env.local` and fill in real values.

# Prisma / Postgres
DATABASE_URL="postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public"
DIRECT_URL="postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public"

# App URL (used for building links and OAuth redirects)
NEXT_PUBLIC_URL="http://localhost:3000"

# Nylas (OAuth & API)
NYLAS_CLIENT_ID="your-nylas-client-id"
NYLAS_API_SECRET_KEY="your-nylas-api-secret-key"
NYLAS_API_URL="https://api.us.nylas.com"

# Node environment
NODE_ENV=development

# NextAuth / Auth.js secret (generate a long random string)
NEXTAUTH_SECRET="your-nextauth-secret-here"

# Google OAuth (if you enable Google sign-in)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
